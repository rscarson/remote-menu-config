{	
	## Menu Board main configuration
	## Copyright Richard Carson
	##
	## The images section below should consist of comma separated
	## menu entries with the following template:
	##	{
	##		"character" : "bugs",
	##		"name": "Carrot Juice", 
	##		"ingredients": "Ginger Beer, Vodka, Carrot Juice, Lime, Angostura Bitters",
	##		"price": "$2.75",
	##		"available": true
	##	}
	##
	## character	: A character icon, from the list below
	## name			: The name of the drink
	## ingredients	: List of ingredients to display
	## price		: Price of the drink
	## available	: true, to display the item. false to ignore it
	##
	## Below is a list of available character icons:
	## ----------------------
	## bugs, coyote, daffy, elmer, foghorn, frog, lola, marvin,
	## pepe, porky, roadrunner, speedy, sylvester, taz, tweety

	"configuration": {
		## General options
		"image_directory"			: "logos_1080p",
		"screen_resolution"			: [1080, 1920],
		"image_padding_size"		: 10,

		## Page options
		"page_change_interval_ms"	: 15000,
		"config_reload_interval_ms"	: 180000,
		"items_per_page"			: 8,

		## Text options
		"text_font_sizes"			: [28, 16, 16],
		"text_font"					: "Helvetica",
		"text_font_bold"			: true,
		"text_shadow_darkness"		: 40,
		"text_shadow_size"			: 3,
		"text_border_size"			: 1,

		## Background colours
		"background": "#73c850",
		"colours": [
			"#663399",
			"#CC0000",
			"#FFFF00",
			"#FF6600",
			"#0000CC"
		]
	},

	"images":
	[
		## ------------------------
		## -------- Page 1 --------
		## ------------------------
		{
			"character" : "bugs",
			"name": "Carrot Juice fishk", 
			"ingredients": "Ginger Beer, Vodka, Carrot Juice, Lime, Angostura Bitters",
			"price": "$2.75",
			"available": true
		}
	]
}
